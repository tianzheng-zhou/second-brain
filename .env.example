# DashScope API Key (Required)
# Get your API key from https://dashscope.console.aliyun.com/
DASHSCOPE_API_KEY=

# DashScope Base URL (Optional)
# DASHSCOPE_BASE_URL=https://dashscope.aliyuncs.com/compatible-mode/v1

# Storage Configuration (Optional)
# PB_STORAGE_PATH=~/personal_brain_data
# PB_DB_PATH=~/personal_brain_data/brain.db

# Aliyun OSS Configuration (Required for MinerU PDF processing)
ALIYUN_ACCESS_KEY_ID=
ALIYUN_ACCESS_KEY_SECRET=
ALIYUN_OSS_ENDPOINT=oss-cn-hangzhou.aliyuncs.com
ALIYUN_OSS_BUCKET=

# MinerU Configuration (Required for PDF processing)
MINERU_API_TOKEN=
MINERU_BASE_URL=https://mineru.net/api/v4
# Set to 'false' to bypass system proxy (useful if you have connection issues with MinerU when using VPN/Proxy)
MINERU_USE_SYSTEM_PROXY=true

# Agent Configuration (Optional)
# Set to 'false' to allow deleting memories without confirmation. Default is 'true'.
DELETE_CONFIRMATION=true

# Chainlit Auth Secret (Required for authentication)
# Generate one using `chainlit create-secret`
CHAINLIT_AUTH_SECRET=
